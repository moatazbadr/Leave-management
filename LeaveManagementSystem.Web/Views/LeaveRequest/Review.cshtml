@using LeaveManagementSystem.Application.Models.LeaveRequestModels
@model ReviewLeaveRequestVM;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Review Leave Request";
}

<h1>Leave Request Review</h1>

<div class="alert alert-info" role="alert">
    <h4 class="alert-heading">Requesting Employee</h4>
    <hr />
    <p>
        <strong> Name : </strong>
        @Model.EmployeeListVM.FirstName  @Model.EmployeeListVM.LastName
        <br />
        <strong> Email : </strong>
        @Model.EmployeeListVM.Email
    </p>
    <hr />
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model=>Model.LeaveTypeName)
        </dt>
       <dd class="col-sm-10">
           @Html.DisplayFor(Model=>Model.LeaveTypeName)
       </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(Model => Model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(Model => Model.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.RequestComment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(Model => Model.RequestComment)
        </dd>
    </dl>

</div>

<div class="row">
<div class="col">
    <button class="btn btn-outline-success approvalBtn" data-id="@Model.Id" data-approved="true">Approve</button>
</div>
<div class="col">
    <button class="btn btn-outline-danger approvalBtn" data-id="@Model.Id" data-approved="false">Decline</button>
</div>
<div class="col">
    <a class="btn btn-outline-primary" asp-action="ListRequests">Back to List</a>
</div>
</div>

<form asp-action="Review" id="approvalForm">
    <input type="hidden" name="id" id="leaveRequestId" />
    <input type="hidden" name="approved" id="approved" />
</form>
@section Scripts {
    <script>
        $(function () {
            $('.approvalBtn').click(
                function (e) {
                    swal({
                        title: "Are you sure?",
                        text: "Please confirm this approval decision",
                        icon: "warning",
                        buttons: true,
                        dangerMode: true
                    }).then((confirm) => {
                        if (confirm) {
                            var btn = $(this);
                            var id = btn.data("id");
                            var approved = btn.data("approved");
                            $('#leaveRequestId').val(id);
                            $('#approved').val(approved);
                            $('#approvalForm').submit();
                        }
                    });
                }
            );
        });
    </script>
}