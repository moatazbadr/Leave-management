@using LeaveManagementSystem.Web.Services.LeaveRequests
@model IEnumerable<LeaveRequestListVM>;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Leave Request List";
}
<h1>Review your leave Requests</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LeaveTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var className = string.Empty;
            if (item.Status == LeaveRequestStatusEnum.Pending)
            {
                className = "warning";
            }
            else if (item.Status == LeaveRequestStatusEnum.Approved)
            {
                className = "success";
            }
            else if (item.Status == LeaveRequestStatusEnum.Declined)
            {
                className = "danger";
            }
            else if (item.Status == LeaveRequestStatusEnum.Cancelled)
            {
                className = "dark";
            }

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LeaveTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfDays)
                </td>
                <td>
                    <span class="badge rounded-pill bg-@className">@item.Status.ToString()</span>
                </td>
                <td>
                    @if (item.Status == LeaveRequestStatusEnum.Pending)
                    {
                        @*  <a asp-action="Cancel" asp-route-id="@item.Id" class="btn btn-outline-danger">cancel</a> *@
                        <button data-id="@item.Id" class="btn btn-outline-danger cancelBtn"> Cancel</button>
                    }
                    else
                    {
                        <p>No action allowed</p>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
<form id="cancelForm" asp-action="Cancel">
    <input type="hidden" name="id" id="leaveRequestId" />
    
</form>

@section Scripts {

    <script>
        $(function () {
            $(".cancelBtn").click(function (e) {
                e.preventDefault(); 
                swal({
                    title: "Are you sure?",
                    text: "You will not be able to recover this request!",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true,
                })
                .then((confirm) => {
                    if (confirm) {
                        var btn = $(this);
                        var id = btn.data("id");
                        $("#leaveRequestId").val(id);
                        $("#cancelForm").submit();
                    }
                });
            });
        });
    </script>
}

